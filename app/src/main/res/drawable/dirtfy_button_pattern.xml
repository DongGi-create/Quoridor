<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/D_second"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <solid
                android:color="@color/D_second"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <solid
                android:color="@color/D_primary"/>
            <corners
                android:radius="15dp"/>
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp"/>
        </shape>
    </item>
    <!-- default -->
</selector>