<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/D_primary">


    <LinearLayout
        android:id="@+id/custom_item_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/custom_name_text_view"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/custom_rating_image_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            tools:src="@drawable/baseline_workspace_premium_24_blue"/>

        <TextView
            android:id="@+id/custom_ranking_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/D_text"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/custom_rating_image_view"
            app:layout_constraintLeft_toLeftOf="@id/custom_rating_image_view"
            app:layout_constraintRight_toRightOf="@id/custom_rating_image_view"
            tools:text="9999"/>
    </LinearLayout>
    <TextView
        android:id="@+id/custom_name_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="6"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:textColor="@color/D_text"
        android:gravity="center_vertical|left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/custom_item_layout"
        app:layout_constraintEnd_toStartOf="@id/custom_rating_text_view"
        tools:text="name"/>

    <TextView
        android:id="@+id/custom_rating_text_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_weight="6"
        android:textSize="20sp"
        android:paddingEnd="20dp"
        android:textColor="@color/D_text"
        android:gravity="right|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/custom_name_text_view"
        tools:text="1000"/>

</androidx.constraintlayout.widget.ConstraintLayout>
